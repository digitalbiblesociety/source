{
	"name": "tav",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"rebuild": "npm run clean && npm run build",
		"clean": "rm -rf .svelte-kit && rm -rf build",
		"publish": "npm run rebuild && cd ./build && echo \"dbs.org\" >| CNAME && git init && git add . && git commit -m \"auto-push\" && git branch -M main && git remote add origin git@github.com:digitalbiblesociety/dbs-prod.git && git push -f -u origin main",
		"publish-dev": "npm run rebuild && cd ./build && echo \"dev.dbs.org\" >| CNAME && git init && git add . && git commit -m \"auto-push\" && git branch -M main && git remote add origin git@github.com:digitalbiblesociety/site-dev.git && git push -f -u origin main",
		"preview": "svelte-kit preview",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
	},
	"devDependencies": {
		"@antfu/ni": "^0.9.3",
		"@beyonk/svelte-google-analytics": "^2.6.4",
		"@dbs/svelte-bible-brain": "workspace:next",
		"@dbs/svelte-bible-wiki": "workspace:next",
		"@dbs/svelte-datatables": "workspace:next",
		"@dbs/svelte-dbs-ui": "workspace:next",
		"@iconify-json/heroicons-outline": "^1.1.4",
		"@iconify-json/heroicons-solid": "^1.1.5",
		"@rgossiaux/svelte-headlessui": "^1.0.2",
		"@stripe/stripe-js": "^1.35.0",
		"@sveltejs/adapter-static": "next",
		"@sveltejs/kit": "next",
		"@tailwindcss/aspect-ratio": "^0.4.2",
		"@tailwindcss/forms": "^0.4.1",
		"@tailwindcss/line-clamp": "^0.3.1",
		"@tailwindcss/typography": "^0.5.7",
		"autoprefixer": "^10.4.8",
		"fuse.js": "^6.6.2",
		"onchange": "^7.1.0",
		"postcss": "^8.4.16",
		"postcss-load-config": "^3.1.4",
		"prettier": "^2.7.1",
		"prettier-plugin-tailwindcss": "^0.1.13",
		"query-store": "^1.1.2",
		"shopify-buy": "^2.16.1",
		"svelte": "^3.50.0",
		"svelte-check": "^2.9.0",
		"svelte-forms": "^2.3.1",
		"svelte-i18n": "^3.4.0",
		"svelte-preprocess": "^4.10.7",
		"sveltekit-i18n": "^2.2.2",
		"tailwindcss": "^3.1.8",
		"tslib": "^2.4.0",
		"typescript": "^4.8.2",
		"unplugin-icons": "^0.14.9",
		"vite": "^3.1.0"
	},
	"type": "module",
	"engines": {
		"node": ">= 12.17.0"
	},
	"dependencies": {
		"lodash": "^4.17.21"
	}
}
