{
	"name": "shin",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"rebuild": "npm run clean && npm run build",
		"clean": "rm -rf .svelte-kit && rm -rf build",
		"publish": "npm run rebuild && cd ./build && echo \"mx.bible.cloud\" >| CNAME && git init && git add . && git commit -m \"auto-push\" && git branch -M main && git remote add origin git@github.com:digitalbiblesociety/tav-mx.git && git push -f -u origin main",
		"publish-ec": "npm run rebuild && cd ./build && echo \"ec.bible.cloud\" >| CNAME && git init && git add . && git commit -m \"auto-push\" && git branch -M main && git remote add origin git@github.com:digitalbiblesociety/tav-ec.git && git push -f -u origin main",
		"preview": "vite preview",
		"lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. .",
		"build:translations": "messageformat src/translations/ --outfile=src/generated/translations.js",
		"watch:translations": "npm run build:translations && onchange 'src/translations/**' -- npm run build:translations"
	},
	"devDependencies": {
		"vite": "^4.0.0",
		"@sveltejs/adapter-static": "1.0.0",
		"@sveltejs/kit": "1.0.1",
		"svelte": "^3.55.0",
		"svelte-preprocess": "5.0.0",
		"@dbs/svelte-bible-brain": "workspace:next",
		"@dbs/svelte-bible-wiki": "workspace:next",
		"@dbs/svelte-datatables": "workspace:next",
		"@dbs/svelte-dbs-ui": "workspace:next",
		"@iconify/json": "^2.1.92",
		"@messageformat/cli": "^3.1.0",
		"@messageformat/core": "^3.0.1",
		"@playwright/test": "^1.25.0",
		"@rgossiaux/svelte-headlessui": "^1.0.2",
		"@sveltejs/adapter-auto": "next",
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/forms": "^0.4.1",
		"@tailwindcss/line-clamp": "^0.3.1",
		"@tailwindcss/typography": "^0.5.4",
		"d3": "^7.6.1",
		"d3-color": "^3.1.0",
		"d3-composite-projections": "^1.4.0",
		"d3-geo": "^3.0.1",
		"d3-interpolate": "^3.0.1",
		"d3-scale": "^4.0.2",
		"dotenv": "^16.0.1",
		"eslint": "^8.21.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"fuse.js": "^6.6.2",
		"onchange": "^7.1.0",
		"postcss": "^8.4.16",
		"postcss-load-config": "^3.1.4",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"prettier-plugin-tailwindcss": "^0.1.13",
		"svelte-video-player": "^1.2.5",
		"sveltekit-i18n": "^2.2.2",
		"tailwindcss": "^3.1.8",
		"svelte-headless-table": "^0.13.3"
	},
	"type": "module"
}
