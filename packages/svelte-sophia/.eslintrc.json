{
    "root": true,
    "overrides": [{ "files": ["*.svelte"], "processor": "svelte3/svelte3" }],
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "xo"
    ],
    "plugins":[
        "svelte3"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "max-len": ["error", {"code": 120}],
        "no-multiple-empty-lines": "off",
        "no-return-assign": "off",
        "semi": ["error", "never"]
    }
}